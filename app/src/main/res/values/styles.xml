<resources>

    <!-- Base application theme. -->
    <style name="ToolbarAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>


    <style name="ToolbarAppTheme.Login">
        <item name="android:windowBackground">@color/login_background</item>
        <item name="colorPrimaryDark">@color/login_background_dark</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.54</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
    </style>

    <style name="entry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
    </style>

    <style name="Semibold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/Lato-Semibold.ttf</item>
    </style>

    <style name="Semiboldtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:layout_marginTop">@dimen/one_and_half_typ_margin</item>
        <item name="android:layout_marginLeft">@dimen/kujon_margin_typ</item>
        <item name="android:textColor">@color/dark</item>
        <item name="fontPath">fonts/Lato-Semibold.ttf</item>
    </style>


    <style name="Semibold.Dark">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="Regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/font_standard</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
    </style>

    <style name="Light">
        <item name="fontPath">fonts/Lato-Light.ttf</item>
    </style>

    <style name="Semi">
        <item name="fontPath">fonts/Lato-Semibold.ttf</item>
    </style>

    <style name="new_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/label_background</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:alpha">0.35</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Regular.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/kujon_margin_typ</item>
        <item name="android:layout_marginRight">@dimen/kujon_margin_typ</item>
        <item name="android:layout_marginTop">@dimen/kujon_margin_typ</item>
        <item name="android:textColor">@color/dark_60</item>
    </style>

    <style name="Regular.Label.Cycles">
        <item name="android:textSize">@dimen/font_size_vh_header</item>
    </style>

    <style name="Regular.Label.Left">
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="Regular.Entry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/kujon_margin_typ</item>
        <item name="android:paddingRight">@dimen/kujon_margin_typ</item>
        <item name="android:layout_marginBottom">@dimen/one_and_half_typ_margin</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="Regular.Entry.course_details">
        <item name="android:layout_marginTop">@dimen/one_and_half_typ_margin</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>
    <style name="Regular.Entry.Linear">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Regular.Entry.Semibold">
        <item name="fontPath">fonts/Lato-Semibold.ttf</item>
    </style>

    <style name="Regular.Label.Background">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingTop">@dimen/kujon_margin_typ</item>
        <item name="android:paddingLeft">@dimen/kujon_margin_typ</item>
        <item name="android:background">@drawable/label_background</item>
        <item name="android:layout_marginTop">@dimen/one_and_half_typ_margin</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_standard</item>
        <item name="android:layout_height">@dimen/cell_size_typ</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">

    </style>

    <style name="AppTheme.DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>

    </style>

    <style name="textDialogWithDrawable">
        <item name="android:textColor">@color/dark</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:drawablePadding">22dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/dialog_lines_padding</item>
        <item name="android:paddingBottom">@dimen/dialog_lines_padding</item>
    </style>

    <style name="vh_file_header_style">
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
        <item name="android:textSize">@dimen/font_size_vh_header</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="vh_file_details_style">
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
        <item name="android:textSize">@dimen/font_size_vh_details</item>
        <item name="android:textColor">@color/dark_60</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="progress_text_view">
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
        <item name="android:textSize">@dimen/progress_font_size</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="vh_entry">
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/small_margin</item>
        <item name="android:paddingRight">@dimen/small_margin</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">@dimen/vh_entry_padding</item>
        <item name="android:paddingBottom">@dimen/vh_entry_padding</item>
    </style>

    <style name="vh_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="file_details_attributes">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/small_margin</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
        <item name="android:textColor">@color/dark_60</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
    </style>
    <style name="file_details_attributes.rest">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="search_button_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/font_standard</item>
        <item name="android:textColor">@color/dark_blue_sky</item>
        <item name="android:text">@string/search</item>
    </style>
</resources>
