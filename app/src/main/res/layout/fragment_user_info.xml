<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            tools:text="User info"/>

        <ImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:src="@drawable/user_placeholder"/>

        <TextView
            style="@style/label"
            android:text="USOS"/>

        <TextView
            android:id="@+id/usosName"
            style="@style/entry"
            tools:text='Lorem ipsum'/>

        <TextView
            style="@style/label"
            android:text="ImiÄ™ i Nazwisko"/>

        <TextView
            android:id="@+id/firstLastName"
            style="@style/entry"
            tools:text='Lorem ipsum'/>

        <TextView
            style="@style/label"
            android:text="Numer indexu"/>

        <TextView
            android:id="@+id/index"
            style="@style/entry"
            tools:text='Lorem ipsum'/>

        <TextView
            style="@style/label"
            android:text="Status studenta"/>

        <TextView
            android:id="@+id/student_status"
            style="@style/entry"
            tools:text='Lorem ipsum'/>

        <TextView
            style="@style/label"
            android:text="Numer konta"/>

        <TextView
            android:id="@+id/student_account_number"
            style="@style/entry"
            tools:text='Lorem ipsum'/>

        <TextView
            style="@style/label"
            android:text="Kierunki"/>

        <TextView
            android:id="@+id/student_programmes"
            style="@style/entry"
            tools:text='Lorem ipsum'/>

    </LinearLayout>
</ScrollView>