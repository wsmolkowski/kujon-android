<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="mobi.kujon.network.json.User"/>
    </data>

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/dark_blue_sky"
                        android:orientation="vertical"
                        android:paddingBottom="8dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="8dp">

                            <ImageView
                                android:id="@+id/picture"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/photo_placeholder"/>

                            <ImageView
                                android:id="@+id/usosLogo"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right|bottom"
                                tools:src="@drawable/user_placeholder"
                                />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/firstLastName"
                            style="@style/Semibold"
                            tools:text='Jan Kowalski'/>

                        <TextView
                            style="@style/Regular"
                            android:text="@{user.student_status}"
                            tools:text='aktywny student'/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/Regular"
                                    android:layout_marginTop="0dp"
                                    android:text="@string/index_number"
                                    android:textSize="11sp"/>

                                <TextView
                                    style="@style/Regular"
                                    android:text="@{user.student_number}"
                                    tools:text='1234567890'/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/Regular"
                                    android:text="@string/account_number"
                                    android:textSize="11sp"/>

                                <TextView
                                    style="@style/Regular"
                                    android:text="@{user.id}"
                                    tools:text='987654321'/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="0dp"
                        style="@style/Regular.Label.Background"
                        android:text="@string/majors"/>

                    <LinearLayout
                        android:id="@+id/student_programmes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        />

                    <TextView
                        android:layout_marginTop="0dp"
                        style="@style/Regular.Label.Background"
                        android:text="@string/organization_units"/>

                    <LinearLayout
                        android:id="@+id/student_faculties"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        />

                    <TextView
                        android:layout_marginTop="0dp"
                        style="@style/Regular.Label.Background"
                        android:text="@string/additional_information"/>

                    <TextView
                        android:id="@+id/terms"
                        style="@style/entry"
                        android:layout_marginLeft="@dimen/kujon_margin_typ"
                        android:layout_marginRight="@dimen/kujon_margin_typ"
                        android:layout_marginTop="@dimen/double_typ_margin"
                        android:layout_marginBottom="@dimen/double_typ_margin"
                        android:gravity="center_vertical"
                        android:text="@string/study_cycles"/>

                    <View style="@style/divider"/>
                    <TextView
                        android:id="@+id/theses"
                        style="@style/entry"
                        android:layout_marginLeft="@dimen/kujon_margin_typ"
                        android:layout_marginRight="@dimen/kujon_margin_typ"
                        android:layout_marginTop="@dimen/double_typ_margin"
                        android:layout_marginBottom="@dimen/double_typ_margin"
                        android:background="?selectableItemBackground"
                        android:gravity="center_vertical"
                        android:text="@string/thesiss"/>

                </LinearLayout>
            </ScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </FrameLayout>
</layout>