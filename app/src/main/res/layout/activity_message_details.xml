<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/kujon_toolbar_with_back" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/kujon_margin_typ">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/from"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/font_size_message" />

                <TextView
                    android:id="@+id/message_sender_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/double_typ_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_message" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/one_and_half_typ_margin"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/date"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/font_size_message" />

                <TextView
                    android:id="@+id/message_send_date_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/double_typ_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_message" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/message_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/one_and_half_typ_margin"
                android:text="@string/empty_message"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_message" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
