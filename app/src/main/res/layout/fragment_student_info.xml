<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/label"
                            android:layout_marginTop="0dp"
                            android:text="ImiÄ™ i Nazwisko"/>

                        <TextView
                            android:id="@+id/firstLastName"
                            style="@style/entry"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            tools:text='Jan Kowalski'/>

                        <TextView
                            android:id="@+id/student_status"
                            style="@style/entry"
                            android:alpha="0.87"
                            android:textSize="14sp"
                            tools:text='aktywny student'/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/picture"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/photo_placeholder"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/usosLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/label"
                            android:layout_marginTop="0dp"
                            android:text="Uczelnia"/>

                        <TextView
                            android:id="@+id/usosName"
                            style="@style/entry"
                            tools:text='Lorem ipsum'/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/usosLogo"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="8dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/label"
                            android:layout_marginTop="0dp"
                            android:text="Numer konta"/>

                        <TextView
                            android:id="@+id/student_account_number"
                            style="@style/entry"
                            tools:text='987654321'/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    style="@style/label"
                    android:text="Kierunki"/>

                <LinearLayout
                    android:id="@+id/student_programmes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    />

            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>