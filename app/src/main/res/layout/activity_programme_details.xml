<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/Semibold"
            tools:text="Toolbar Title" />
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/programme_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@android:color/black"
                android:textSize="22sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/study_level"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>
            <TextView
                android:id="@+id/programme_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:text="@string/none"
                android:textSize="18sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/programme_duration"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>
            <TextView
                android:id="@+id/programme_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:text="@string/none"
                android:textSize="18sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/programme_id"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>
            <TextView
                android:id="@+id/programme_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:text="@string/none"
                android:textSize="18sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/programme_mode"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>
            <TextView
                android:id="@+id/programme_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:text="@string/none"
                android:textSize="18sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/programme_name"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>
            <TextView
                android:id="@+id/programme_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:text="@string/none"
                android:textSize="18sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/ects_sum"
                android:id="@+id/ects_sum_label"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>
            <TextView
                android:id="@+id/programme_ects_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:text="@string/none"
                android:textSize="18sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>