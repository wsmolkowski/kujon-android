<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textDialog"
        android:drawableLeft="@drawable/teachers"
        android:layout_marginLeft="16dp"
        android:text="@string/share_with_everyone"
        android:layout_marginTop="32dp"
        android:id="@+id/share_with_everyone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textDialog"
        android:drawableLeft="@drawable/plan"
        android:layout_marginLeft="16dp"
        android:text="@string/share_with_chosen"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:id="@+id/share_with_chosen"/>

</LinearLayout>